{% assign page_title = '' %}
{% if page.title == "Home" %}
  {% capture page_title %}
    {{ site.title }} | {{ site.description }}
    {%if paginator and paginator.page != 1 %}
      -
      {{ paginator.page }}
    {% endif %}
  {% endcapture %}
{% else %}
  {% capture page_title %}
    {%if page.slug == 'category' %}
    Category:
    {% endif %}
    {%if page.slug == 'tag' %}
    Tag:
    {% endif %}
    {{ page.title }} | {{ site.title }}
  {% endcapture %}
{% endif %}
{% capture page_title %}
  {{ page_title | strip | rstrip | lstrip | escape | strip_newlines }}
{% endcapture %}

<title>{{ page_title }}</title>