{% if site.posts.size > 0 %}
{% assign category_post_idx = 0 %}
  <ul>
    {% for post in site.posts %}
      {% if category_post_idx > 10%}
      {% break %}
      {% else %}
      {% if post.categories contains include.category_name %}
      {% assign category_post_idx = category_post_idx | plus: 1 %}
        <li>
          {{ post.date | date: site.theme_config.date_format }} <a href="{{ post.url | relative_url }}">{{ post.title }}</a>
        </li>
      {% endif %}
      {% endif%}
    {% endfor %}
  </ul>
{% endif %}